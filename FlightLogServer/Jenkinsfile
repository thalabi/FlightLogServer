pipeline {
    agent any
    tools { 
        maven 'Maven 3.5.2' 
        jdk 'jdk-13.0.1+9' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
                java -version
                '''
            }
        }

        stage ('Build') {
            steps {
                sh '''
                cd FlightLogServer
                mvn clean deploy
                '''
            }

        stage ('Deploy') {
            steps {
                sh '''
                cd FlightLogServer
                echo "BRANCH_NAME = ${BRANCH_NAME}"
                '''
            }
        }
    }
}