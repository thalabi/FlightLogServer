<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="
		http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create-unique-constraint-lk-on-all-tables-2" author="thalabi">

		<sql>
		<![CDATA[
		update part set lk=name
		]]>         
		</sql>
        <addUniqueConstraint columnNames="lk" constraintName="part_unique_lk" tableName="part"/>

		<sql>
		<![CDATA[
		update component set lk=name||'|'||to_char(date_performed,'yyyy-mm-dd')||'|'||work_performed||'|'||part_id 
		]]>         
		</sql>
        <addUniqueConstraint columnNames="lk" constraintName="component_unique_lk" tableName="component"/>

		<sql>
		<![CDATA[
		update component_history set lk=name||'|'||to_char(date_performed,'yyyy-mm-dd')||'|'||work_performed||'|'||part_id 
		]]>         
		</sql>
        <addUniqueConstraint columnNames="lk" constraintName="component_history_unique_lk" tableName="component_history"/>
    
    </changeSet>
</databaseChangeLog>